main
    var q = QueueOfTiles(10)
    print q.show()
end main

class QueueOfTiles
    constructor(maxSize Int)
        set self.maxSize to maxSize
        set contents to Array<String>(maxSize)
        set rear to -1 # signifies 'empty'
    end constructor

    private property contents Array<String>
    private property rear Int
    private property maxSize Int

    procedure initialise()
        set rear to -1
        for count = 0 to maxSize - 2
           call add()
        end for
    end procedure

    function isNotEmpty() -> Boolean
         return rear is not -1
    end function

    procedure withdrawNextLetter(letter String)
        if isNotEmpty() then
            set letter to contents[0]
            for count = 1 to rear
                set contents[count - 1] to contents[count]
                set contents[rear] to """"
            end for
            set rear to rear - 1
        end if
    end procedure

    procedure add()
        if rear < maxSize - 1 then
            set rear to rear + 1
            var n = random(0, 30)
            set contents[rear] to contents[n].asString()  #where is 'letters'?
        end if
    end procedure

    function show() -> String
       var result = """"
       foreach letter in contents
         set result to result + letter       
       end foreach
       return result + newline
    end function

    function asString() -> String 
        return self.typeAndProperties()
    end function
end class